<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="system.management.information.itms.IndexFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerShowSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF" />

        <Spinner
            android:id="@+id/spinnerShowEdittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/spinnerShowSpinner"
            android:layout_alignParentStart="true"
            android:background="#FFFFFF" />
    </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="10dp">

        <EditText
            android:id="@+id/Topic_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:enabled="false"
            android:hint="ข้อมูลจากเว็บไซต์"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
           />

  </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="บันทึก"
                android:enabled="false"
                />

            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="แก้ไข"
                android:enabled="false" />
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/imageSpin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/image_icon"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
